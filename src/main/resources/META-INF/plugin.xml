<idea-plugin>
    <id>com.zysy.tools.intelljclienttool</id>
    <name>intellj_client_tool</name>
    <vendor>cugzhuo</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="GenHashCodeAction" class="com.zysy.tools.Actions.GenHashCodeAction" text="[Gen Hash Code]">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt M"/>
        </action>
        <action id="AddLanguageAction" class="com.zysy.tools.Actions.AddLanguageAction" text="添加至中文表" description="添加中文">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt L"/>
        </action>
        <action id="CreatePanelAction" class="com.zysy.tools.Actions.CreatePanelAction" text="创建ui" description="创建ui">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt U"/>
        </action>
    </actions>
</idea-plugin>
